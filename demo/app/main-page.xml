<Page class="page" xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-imagecropper">
  <ActionBar class="action-bar" title="Image Cropper Demo"></ActionBar>
  <ScrollView>
    <StackLayout class="p-20">
      <Label text="nativescript-imagecropper demo" class="title" textWrap="true"/>
      <Button class="btn btn-primary" text="Camera" tap="{{ tapCameraAction }}" />
      <Button class="btn btn-primary" text="Camera with Resize" tap="{{ tapCameraActionResize }}" />
      <Button class="btn btn-primary" textWrap="true" text="Camera with Circular [Crop - iOS] [Mask - Android]" tap="{{ tapCameraActionCircular }}" />
      <Image id="croppedImage" />
    </StackLayout>
  </ScrollView>
</Page>
